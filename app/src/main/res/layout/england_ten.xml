<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".England_Ten"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/topButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TenFront"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="50"
                android:text="@string/Front"
                android:textAlignment="center"
                android:textColor="@color/textColour"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/TenBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="50"
                android:text="@string/Back"
                android:textAlignment="center"
                android:textColor="@color/textColour"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:layout_below="@id/topButton"
            android:id="@+id/engTenImage"
            android:layout_width="match_parent"
            android:layout_height="216dp"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2.5dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="2dp"
            android:contentDescription="@string/image"
            android:scaleType="fitCenter"
            android:src="@drawable/e_ten_front" />

        <ScrollView
            android:id="@+id/frontMain1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/engTenImage"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/image"
                    android:scaleType="fitCenter"
                    android:src="@drawable/e_ten_security1" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/image"
                    android:scaleType="fitCenter"
                    android:src="@drawable/e_ten_security2" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/image"
                    android:scaleType="fitCenter"
                    android:src="@drawable/e_ten_security3" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/image"
                    android:scaleType="fitCenter"
                    android:src="@drawable/e_ten_security4" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/image"
                    android:scaleType="fitCenter"
                    android:src="@drawable/e_ten_security5" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/image"
                    android:scaleType="fitCenter"
                    android:src="@drawable/e_ten_security6" />

            </LinearLayout>

        </ScrollView>

        <ScrollView
            android:id="@+id/frontMain2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/engTenImage"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/image"
                    android:scaleType="fitCenter"
                    android:src="@drawable/e_five_securityb1" />

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>