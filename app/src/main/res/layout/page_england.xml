<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Page_England"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/TitleEng"
                android:textAlignment="center"
                android:textColor="@color/textColour"
                android:textSize="50sp"
                android:textStyle="bold"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/dividingLine"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/WTDEng"
                android:textAlignment="center"
                android:textColor="@color/textColour"
                android:textSize="35sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/engFiverButton"
                android:layout_width="354dp"
                android:layout_height="165dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:src="@drawable/england_five_button"
                android:contentDescription="@string/image" />

            <ImageView
                android:id="@+id/engTennerButton"
                android:layout_width="354dp"
                android:layout_height="165dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:src="@drawable/england_ten_button"
                android:contentDescription="@string/image" />

            <ImageView
                android:id="@+id/engTwentyButton"
                android:layout_width="354dp"
                android:layout_height="165dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:src="@drawable/england_twenty_button"
                android:contentDescription="@string/image" />

            <ImageView
                android:id="@+id/engFiftyButton"
                android:layout_width="354dp"
                android:layout_height="165dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:src="@drawable/england_fifty_button"
                android:contentDescription="@string/image" />

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>