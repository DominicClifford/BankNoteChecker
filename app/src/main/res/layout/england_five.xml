<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".England_Five"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="100"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/FiverFront"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="50"
                    android:text="@string/Front"
                    android:textAlignment="center"
                    android:textColor="@color/textColour"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/FiverBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="50"
                    android:text="@string/Back"
                    android:textAlignment="center"
                    android:textColor="@color/textColour"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                android:id="@+id/engFiverImage"
                android:layout_width="match_parent"
                android:layout_height="216dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2.5dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginBottom="2dp"
                android:contentDescription="@string/image"
                android:scaleType="fitCenter"
                android:src="@drawable/england_five_front" />

            <RelativeLayout
                android:id="@+id/frontMain1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="2dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/e_5num_1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:contentDescription="@string/image"
                    android:src="@drawable/round_one" />

                <TextView
                    android:id="@+id/e_5text_1"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/e_5num_1"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="30dp"
                    android:text="@string/E_5Text_1"
                    android:textColor="@color/textColour"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="166dp"
                    android:layout_height="87dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="237dp"
                    android:layout_marginEnd="5dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/image"
                    android:src="@drawable/e_five_security1" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>



</android.support.constraint.ConstraintLayout>